---
import {
  FaFacebookF,
  FaTwitter,
  FaLinkedinIn,
  FaInstagram,
} from "react-icons/fa";

import { frontmatter as footerData } from "../content/home/footer_content.md";

import { PHONE1, PHONE2, SITE_TITLE, ADDRESS } from "../consts";

const today = new Date();
---

<footer class="bg-slate-800 text-white py-8 px-4">
  <div class="container mx-auto flex flex-wrap font-averia_sans">
    <div class="w-full md:w-1/2 lg:w-1/3 mb-8 md:mb-0 px-4">
      <h2 class="text-3xl font-cursive font-pacifico mb-2">
        {SITE_TITLE}
      </h2>
      <span
        class="text-secondary text-xl mb-4 inline-block border-b-2 border-secondary"
      >
        {footerData.subtitle}
      </span>
      <p class="text-sm mt-4">{footerData.description}</p>
    </div>

    <div class="w-full md:w-1/2 lg:w-1/3 mb-8 md:mb-0 px-4">
      <h1 class="mb-5">
        <span class="text-secondary text-2xl border-secondary border-b-2"
          >Quick Links</span
        >
      </h1>
      <ul class="space-y-2">
        {
          footerData.links.map((link) => (
            <li>
              <a href={link.href} class="hover:text-green-400">
                {link.title}
              </a>
            </li>
          ))
        }
      </ul>
    </div>

    <div class="w-full md:w-1/2 lg:w-1/3 px-4">
      <h1 class="mb-5">
        <span class="text-secondary text-2xl border-secondary border-b-2"
          >Contact Us</span
        >
      </h1>
      <div class="space-y-2">
        <a
          href={`tel:${PHONE1}`}
          class="flex items-center space-x-1 hover:text-green-400"
        >
          <span>{PHONE1}</span>
        </a>
        <a
          href={`tel:${PHONE2}`}
          class="flex items-center space-x-1 hover:text-green-400"
        >
          <span>{PHONE2}</span>
        </a>
        <h1 class="text-lg mb-4 flex items-center space-x-1">
          <span>{ADDRESS}</span>
        </h1>
      </div>
      <div class="flex space-x-4 my-5">
        <a href="#" class="text-white hover:text-green-400"><FaFacebookF /></a>
        <a href="#" class="text-white hover:text-green-400"><FaTwitter /></a>
        <a href="#" class="text-white hover:text-green-400"><FaLinkedinIn /></a>
        <a href="#" class="text-white hover:text-green-400"><FaInstagram /></a>
      </div>
    </div>
  </div>

  <div class="mt-8 pt-4 border-t border-gray-700 text-sm text-center">
    <a href="/terms" class="hover:text-green-400">Terms of Use</a> |
    <a href="/privacy" class="hover:text-green-400">Privacy Policy</a>
    <p class="mt-2">
      Copyright {today.getFullYear()} - Dr. Waseem Andrabi. All Rights Reserved.
    </p>
  </div>
</footer>
