---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from '../consts';
import { FaPhoneAlt } from "react-icons/fa";
import { FaLocationDot } from "react-icons/fa6";
import { frontmatter as heroData } from "../content/home/hero_content.md";
---

<header class="bg-primary text-white fixed top-0 left-0 w-full z-50">
	<div class="navbar container mx-auto flex justify-between">

		  <div class="navbar-start p-2 sm:p-3 md:p-4 lg:p-5 w-full">
			<a href="/" class="text-xl xs:text-2xl sm:text-2xl md:text-3xl lg:text-3xl xl:text-4xl font-cursive font-pacifico text-white whitespace-nowrap">
			  {SITE_TITLE}
			</a>
		  </div>

		          
        <!-- Contact info for mobile -->
        <div class="md:hidden w-full px-2 py-1 text-sm">
            <div class="flex justify-center items-center flex-col sm:flex-row w-full sm:space-x-5">
                <a href={`tel:${heroData.phone1}`} class="flex items-center space-x-1">
                    <FaPhoneAlt /><span>{heroData.phone1}</span>
                </a>
                <a href={`tel:${heroData.phone2}`} class="flex items-center space-x-1">
                    <FaPhoneAlt /><span>{heroData.phone2}</span>
                </a>
            </div>
            <!-- <div class="flex items-start space-x-1 mt-1">
                <FaLocationDot />
                <span class="text-xs">{heroData.address}</span>
            </div> -->
        </div>
		  
		  <div class="navbar-center hidden lg:flex mr-5">
			<ul class="flex space-x-6 font-averia_sans text-lg">
			  <li>
				<HeaderLink href="/" class="nav-link">Home</HeaderLink>
			  </li>
			  <li>
				<HeaderLink href="/services" class="nav-link">Services</HeaderLink>
			  </li>
			  <li>
				<HeaderLink href="/about" class="nav-link">About</HeaderLink>
			  </li>
			  <li>
				<HeaderLink href="/blog" class="nav-link">Blog</HeaderLink>
			  </li>
			  <li>
				<HeaderLink href="/contact" class="nav-link">Contact</HeaderLink>
			  </li>
			</ul>
		  </div>

		<!-- dropdown -->
		<div class="navbar-end lg:hidden w-fit">
			<div class="dropdown dropdown-end">
				<label tabindex="0" class="btn btn-ghost lg:hidden">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						class="h-5 w-5"
						fill="none"
						viewBox="0 0 24 24"
						stroke="currentColor"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M4 6h16M4 12h8m-8 6h16"></path>
					</svg>
				</label>
				<ul
					tabindex="0"
					class="menu menu-compact dropdown-content mt-3 p-2 bg-primary rounded-box w-52 shadow-md shadow-black"
				>
					<li>
						<HeaderLink href="/" class="hover:text-green-400"
							>Home</HeaderLink>
					</li>
					<li>
						<HeaderLink
							href="/services"
							class="hover:text-green-400">Services</HeaderLink>
					</li>
					<li>
						<HeaderLink href="/about" class="hover:text-green-400"
							>About</HeaderLink>
					</li>
					<li>
						<HeaderLink href="/blog" class="hover:text-green-400"
							>Blog</HeaderLink>
					</li>
					<li>
						<HeaderLink href="/contact" class="hover:text-green-400"
							>Contact</HeaderLink>
					</li>
				</ul>
			</div>
		</div>
	</div>
</header>

<div id="nav-spacer" class="m-[1px]"></div>

<script>
	const header = document.querySelector("header");
	const navSpacer = document.getElementById("nav-spacer");

	function updateNavSpacer() {
		if (!navSpacer || !header) {
			return;
		}
		navSpacer.style.height = `${header.offsetHeight}px`;
	}

	window.addEventListener("resize", updateNavSpacer);
	window.addEventListener("load", updateNavSpacer);
</script>
