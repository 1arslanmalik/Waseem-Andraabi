---
// ImageGallery.astro
const { images } = Astro.props;
---

<section class="px-5 sm:px-10 flex justify-center">
  <div class="carousel carousel-center bg-primary_light w-full sm:w-1/2 rounded-box p-2 sm:p-4">
    {
      images.map((image) => (
        <div class="carousel-item w-fit h-auto px-1">
          <img src={image.src} class="rounded-box object-cover w-full h-48 sm:h-auto" />
        </div>
      ))
    }
  </div>
</section>
