---
import { FaPhoneAlt } from "react-icons/fa";
import { FaLocationDot } from "react-icons/fa6";
import { frontmatter as heroData } from "../content/home/hero_content.md";
---

<section class="text-white relative bg-cream">
    <div class="hidden lg:block">
        <svg
        width="100%"
        height="auto"
        viewBox="0 0 1448 262"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        preserveAspectRatio="none"
        class="w-full h-auto"
        class=""
    >
        <path d="M0 0H1448L0 262V0Z" fill="#0F2A3B"></path>
    </svg>
    
    </div>
    <div class="container mx-auto px-4 py-8">
        <!-- Contact info -->
        <div class="mb-4 text-sm text-primary">
            <div class="flex flex-col md:flex-row md:justify-between mb-2">
                <div class="flex space-x-4 mb-2 md:mb-0">
                    <a
                        href={`tel:${heroData.phone1}`}
                        class="flex items-center space-x-2"
                    >
                        <FaPhoneAlt />
                        <span>{heroData.phone1}</span>
                    </a>
                    <a
                        href={`tel:${heroData.phone2}`}
                        class="flex items-center space-x-2"
                    >
                        <FaPhoneAlt />
                        <span>{heroData.phone2}</span>
                    </a>
                </div>
            </div>
            <div class="flex items-start space-x-2">
                <FaLocationDot />
                <span>{heroData.address}</span>
            </div>
        </div>

        <!-- Main content -->
        <div class="flex flex-col md:flex-row items-center md:items-start">
            <div class="md:w-2/3 mb-8 md:mb-0">
                <div
                    class="bg-[#0F2A3B] text-white inline-block px-4 py-2 mb-4"
                >
                    <h2 class="text-3xl md:text-4xl font-pacifico">
                        Dr. Waseem
                    </h2>
                </div>
                <h1 class="text-4xl md:text-5xl font-bold mb-4 text-primary">
                    A Name That You <br class="hidden md:inline" />Can Trust
                </h1>
                <p class="text-lg mb-4 text-primary">
                    Welcome to the distinguished realm of Dr. Waseem Andrabi, a
                    renowned figure in the domain of reproductive biology and
                    embryology. With a decade of profound experience, Dr.
                    Andrabi...
                </p>
            </div>
            <div class="md:w-1/3 flex justify-center md:justify-end">
                <img
                    src="/profile.png"
                    alt="Dr. Waseem Andraabi"
                    class="w-64 h-64 rounded-full object-cover"
                />
            </div>
        </div>
    </div>

    <!-- <div class="absolute top-0 right-0 w-1/2 h-full bg-white transform -skew-x-12 origin-top-right -z-10"></div> -->
</section>
