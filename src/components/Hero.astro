---
import { frontmatter as heroData } from "../content/home/hero_content.md";
import TiltedTrianlge from "./TiltedTrianlge.astro";
---

<section class="relative bg-cream flex flex-col min-h-screen">
    <TiltedTrianlge />
    <div class="container relative z-10 px-4 sm:px-6 md:px-8 lg:px-12 xl:px-16 max-w-7xl mx-auto">
        <!-- Main content -->
        <div class="flex flex-col lg:flex-row items-center lg:items-start justify-between pb-4 lg:pb-0">
            <div class="w-full lg:w-2/3 mb-8 lg:mb-0 pr-0 lg:pr-8 text-center lg:text-left flex flex-col items-center lg:items-start">
                <div class="w-fit">
                    <div class="text-white inline-block bg-primary px-6 sm:px-8 lg:px-12 py-2 w-fit">
                        <h1 class="w-fit text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-pacifico rounded-sm border-white border-b-4">
                            Dr. Waseem
                        </h1>
                    </div>
                    <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold mb-4 text-primary mt-4">
                        A Name That You <br class="hidden lg:inline" />Can Trust
                    </h1>
                </div>
            </div>
            <!-- Responsive image container -->
            <div class="relative w-48 h-48 sm:w-56 sm:h-56 md:w-64 md:h-64 lg:w-96 lg:h-96 mb-4 lg:mb-0 flex-shrink-0">
                <img
                    src="/profile.png"
                    alt="Dr. Waseem Andraabi"
                    class="w-full h-full object-cover rounded-full shadow-lg lg:-translate-y-20"
                />
            </div>
        </div>

        <!-- Responsive description -->
        <p class="text-center lg:text-left text-primary w-full font-averia_sans text-xl sm:text-2xl md:text-3xl py-6 lg:py-8 lg:pt-4">
            {heroData.description}
        </p>
    </div>
</section>
