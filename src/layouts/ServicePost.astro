---
import MainLayout from "./MainLayout.astro";
import type { CollectionEntry } from "astro:content";
type Props = CollectionEntry<"services">["data"];

const { title, description, imageUrl } = Astro.props;
---

<MainLayout>
    <article class="text-gray-800  bg-gradient-to-br from-cream via-cyan-100 to-blue-100">
        <div class="container bg-white mx-auto px-4 py-8 max-w-4xl min-h-screen">
            <div class="mb-8">
                <a href="/services" class="text-primary hover:underline px-2 py-1 rounded-md bg-black bg-opacity-5">&larr; Back to Services</a>
            </div>
            <h1 class="text-3xl sm:text-4xl font-bold text-primary mb-4">{title}</h1>
            <div class="mb-6 text-sm text-gray-600">
                <p class="text-xl text-gray-700 mb-8">{description}</p>
            </div>
            {imageUrl && (
                <img
                    src={imageUrl}
                    alt={title}
                    class="w-full h-auto object-cover rounded-lg shadow-md mb-8"
                />
            )}
            <div class="prose max-w-none">
                <p class="text-lg text-gray-700 mb-8">{}</p>
                    <slot />
            </div>
        </div>
    </article>
</MainLayout>
